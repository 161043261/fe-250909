{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*", "src/main/**/*", "src/preload/**/*", "src/common/**/*"],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    // Override moduleResolution
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@main/*": ["src/main/*"],
      "@preload/*": ["src/preload/*"],
      "@common/*": ["src/common/*"]
    }
  }
}
